
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <p>If you don't have an account <a href="https://jesse-weeder.azurewebsites.net/Home/About">Sign Up</a> for a new account.</p>
</div>

<body style="background-color:cornsilk;">
    <form action="/Login/Privacy" method="post" align="center">
        <p>Please enter your first name and email:</p>
        <input type="text" name="name" placeholder="Name" required>
        <input type="text" name="email" placeholder="example@gmail.com" required>
        <button type="submit">Submit</button>
    </form>
</body>